    "dotenv": "^16.4.5",
    "esbuild": "^0.23.1",
    "prompts": "^2.4.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.1.1",
    "slugify": "^1.6.6",
    "typescript": "^5.6.2"
  },
